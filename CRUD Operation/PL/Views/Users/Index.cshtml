@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>



<form class="my-3" asp-action="Index" class="mt-3">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Email" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e=>e.Id)</th>
                <th>@Html.DisplayNameFor(e=>e.UserName)</th>
                <th>@Html.DisplayNameFor(e=>e.Email)</th>
                <th>@Html.DisplayNameFor(e=>e.PhoneNumber)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        @foreach (var user in Model)
        {
            <tr>

                <td>@user.Id</td>
                <td>@Html.DisplayFor(e=>user.UserName)</td>
                <td>@Html.DisplayFor(e=>user.Email)</td>
                <td>@user.PhoneNumber</td>


                <td>
                    <a asp-action="Details" asp-controller="Users" class="btn btn-success" asp-route-id="@user.Id">
                        <i class="fas fa-eye"></i>  Details
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="users" class="btn btn-warning" asp-route-id="@user.Id">
                        <i class="fas fa-edit"></i>  Update
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="users" class="btn btn-danger" asp-route-id="@user.Id">
                        <i class="fas fa-trash"></i>  Delete
                    </a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h4> there is no Users!</h4>
    </div>
}

