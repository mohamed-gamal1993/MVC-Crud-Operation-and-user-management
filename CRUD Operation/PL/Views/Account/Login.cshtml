@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}


<div class="main-agileinfo">
			<div class="agileits-top">
				<form asp-action="Login" asp-controller="Account">
					<div asp-validation-summary="All"></div>
					<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
					<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
                    <div class="wthree-text">
						<label class="anim">
							<input type="checkbox"  class="checkbox" asp-for="RemmberMe" >
							<span>Remmber Me</span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="LogIn">
				</form>

				<div class="row">
					<div class=" col-6">
					  <p>Do Not have account <a asp-action="Register"> Register Now!</a></p>
					  </br>
					</div>
					<div class="col-6 mt-3">
						<p>
							 <a asp-action="ForgetPassword"> Forget Password?</a>
						</p>
					</div>
				</div>
				
			</div>
		</div>

<partial name="_ValidationScriptsPartial" />