@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="ForgetPassword" asp-controller="Account">
            <div asp-validation-summary="All"></div>
            <input class="text email" type="email" asp-for="Email" placeholder="Email" required="">

            <input type="submit" value="Forget Password">
        </form>

    </div>
</div>

<partial name="_ValidationScriptsPartial" />

