@model DepartmentViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Update Department</h1>

<form asp-action="Edit" asp-controller="Department" class="mt-3">
    <label asp-for="Id" hidden></label>
    <partial name="PartialViews/CreateUpdateDepartment" />
    <input type="submit" class="btn btn-primary" value="Save" /> |
    <a asp-action="Index" asp-controller="Department" class="btn btn-light">Back to Lists</a>
</form>


